{
  "manifest_version": 3,
  "name": "Dynamic Gauge Extension",
  "version": "1.0",
  "description": "A simple extension with a dynamic gauge icon.",
  "permissions": ["storage", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Gauge Control"
  }
}

